{
  "compilerOptions": {
    "types": ["jest"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "moduleResolution": "Node"
